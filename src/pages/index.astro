---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import ProjectCard from '../components/ProjectCard.astro';

// This will be your featured project
const featuredProject = {
  title: "Global Identity Verification",
  description: "An iOS companion application that allows users to scan or upload data to the Raytio web client. I developed this app from scratc during my summer internship at Raytio and it is now available on the app store for anyone to use.",
  image: "/passport-scan.jpeg",
  imageAlt: "Screenshot of task management application",
  seeMoreUrl: "https://github.com/yourusername/task-manager",
  tags: ["Swift", "AWS", "Amplify", "SwiftUI", "Fastlane", "Xcode"],
  featured: true
};
---

<Layout title="Samuel Beattie">
  <Hero />
  
  <div class="container mx-auto px-4 pb-16 animate-fade-in animate-delay-300">
    <ProjectCard {...featuredProject} />
  </div>
</Layout>

<style>
  .animate-delay-300 {
    animation-delay: 300ms;
  }
</style>